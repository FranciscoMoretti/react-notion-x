{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ],
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build", "lint", "//#test-format"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "//#test-format": {
      "dependsOn": [],
      "outputs": ["build/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "deploy":{
      "dependsOn": ["build"]
    }
  }
}
